        }

        // prijmeni
        inputTextFields[1].oninput = function () {
             outputLabels[1].innerHTML = inputTextFields[1].value;
        }
        // datum narozeni
        inputTextFields[2].oninput = function () {
             outputLabels[2].innerHTML = inputTextFields[2].value;
        }

        // jmeno, prijmeni
        inputTextFields[0].oninput = function () {
             outputLabels[3].innerHTML = inputTextFields[0].value;
        }

        let select = document.getElementById("frm-registrationForm-company");
        select.onselect = function() {

        }



    </script>

